---
export interface Props {
  title: string;
  body: string;
  href?: string;
  onclick?: string;
  src: string;
  p_date: string;
  reactions: number;
  writer: string;
  writerPortfolio: string;
}

const { href, title, body, src } = Astro.props;
---

<li class="link-card">
  {
    href ? (
      <a href={href}>
        <div class="flex gap-4 md:flex-row flex-col-reverse">
          <div class="w-[70%]">
            <h2 class="text-2xl font-semibold">{title}</h2>
            <p>{body.slice(0, 250)}</p>
          </div>
          <img
            class="md:w-[30%] rounded-lg object-contain object-top"
            src={src}
            alt="Blog thumbnail"
          />
        </div>
      </a>
    ) : (
      <div id="click-card">
        <div class="flex md:flex-row gap-4 flex-col-reverse">
          <div class="w-[70%]">
            <h2 class="text-2xl font-semibold">{title}</h2>
            <p>{body.slice(0, 250)}</p>
          </div>
          <img
            class="md:w-[30%] rounded-lg object-contain object-top"
            src={src}
            alt="Blog thumbnail"
          />
        </div>
      </div>
    )
  }
</li>

<style>
  .link-card {
    list-style: none;
    display: flex;
    padding: 0.25rem;
    background-color: white;
    background-image: none;
    background-size: 400%;
    border-radius: 0.6rem;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -2px rgba(0, 0, 0, 0.1);
  }

  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 1rem 1.3rem;
    border-radius: 0.35rem;
    color: #111;
    background-color: white;
    opacity: 0.9;
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    color: #444;
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent));
  }
</style>
